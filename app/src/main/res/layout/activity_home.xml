<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:onClick="keyHide"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yapp.maskru_mobile_project.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/dust_detail"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/color_sky_blue"
            android:text="@string/dust_detail"
            android:textSize="15dp"
            android:background="@drawable/dust_detail_button"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>
    <View
        android:background="@color/color_sky_blue"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="vertical">

    <Button
        android:id="@+id/mask_map"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/color_sky_blue"
        android:background="@drawable/mask_map_button"
        android:textSize="15dp"
        android:text="@string/mask_map"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


</LinearLayout>


</LinearLayout>
